#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import Popup kivy.uix.popup

<CustLabel@Label>:
	#color: 0, 0, 0, 1
	color: 1, 1, 1, 1
	markup: True

<CustButton1@Button>:
	background_color: 8, 8, 16, 1
	color: 0, 0, 0, 1


	
ScreenManagement:
    transition: NoTransition()
    MainScreen:
    DialScreen:
	ContactScreen:
	
<CPopup>:
    title: 'SMS'
    size_hint: 1.0, 0.6
    id: cpopup
	auto_dismiss: False
	
	BoxLayout:
		orientation: 'vertical'
		Label:
			text: "Message sent!"
			font_size: 20
			size_hint_y: 0.6
		Button:
			text: "OK"
			size_hint_y: 0.4
			halign: 'center'
			on_press: print("Sent")
			on_release: cpopup.on_press_dismiss()
			
<DPopup>:
    title: 'Dial'
	id: dpopup
	
	BoxLayout:
		orientation: 'vertical'
		CustLabel:
			halign: 'center'
			valign: 'bottom'			
			size_hint_y: 0.15
			font_size: 30
			text: 'Calling'
			markup: True
		CustLabel:
			halign: 'center'
			valign: 'bottom'			
			size_hint_y: 0.15
			font_size: 20
			text: dpopup.recepient + '...'
			markup: True
			
		BoxLayout:
			size_hint_y: 0.5
			padding: 30, 30
			Image:
				source: 'img/phones/phone.png'
				valign: 'middle'			
		
		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: 0.2
			ToggleButton:
				text: 'Loudspeaker'
				background_color: 0.5, 0.3, 0.8, 0.8

			Button:
				on_press: dpopup.on_press_dismiss()
				text: 'End Call'
				background_color: 255, 0, 0, 0.9

				
<MainScreen>:
    name: 'main'

	BoxLayout:
		orientation: 'vertical'
		
		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: 0.075
			
			Image:
				source: 'img/signal/' + app.signalstrength + '.png'
				size_hint: 0.12, 1
			
			CustLabel:
				text: "2G"
				size_hint_x: 0.085
				font_size: 16
			
			
			CustLabel:
				text: app.timex
				font_size: 18
				size_hint_x: 0.575
				canvas:
				
			BoxLayout:
				size_hint_x: 0.22
				orientation: 'horizontal'
				Image:
					source: 'img/batt/vert/' + app.battery + '.png'
					size_hint: 0.3, 1
				
				CustLabel:
					text: app.battPercent
					size_hint_x: 0.70
					font_size: 16
					
		BoxLayout:
			size_hint_y: 0.15
			#padding: 20, 10
			BoxLayout:
				orientation: 'vertical'
				CustLabel:			
					size_hint_y: 0.65
					font_size: 30
					text: app.datex
					canvas:
						Color:
							rgba: 1, 0, 1, 0
						Rectangle:
							pos: self.pos
							size: self.size
				CustLabel:			
					size_hint_y: 0.30
					text: app.dayx
					canvas:
						Color:
							rgba: 0.4, 0.1, 0.7, 0.2
						Rectangle:
							pos: self.pos
							size: self.size
			BoxLayout:
				orientation: 'vertical'
				CustLabel:			
					size_hint_y: 0.65
					font_size: 30
					text: app.monthx
					canvas:
						Color:
							rgba: 0.4, 0.1, 0.7, 0
						Rectangle:
							pos: self.pos
							size: self.size
				CustLabel:			
					size_hint_y: 0.30
					text: app.yearx
					canvas:
						Color:
							rgba: 1, 0, 1, 0.2
						Rectangle:
							pos: self.pos
							size: self.size

		BoxLayout:
			padding: 20, 20
			size_hint_y: 0.43
			Image:
				source: 'img/phones/phone_receiver.png'				


		GridLayout:
			cols: 2
			size_hint_y: 0.345
			
			Button:
				text: "Call EMD"			
				background_color: 16, 0, 1, 0.7
				on_press: root.FONAstartCall()
				
			Button:
				text: "Send SOS"
				on_press: root.FONAsendSMS()
				background_color: 3.5, 2, 0, 0.9

			Button:
				text: "Dial Other #"
				on_press: app.root.current = 'dial'
				background_color: 0, 8, 2, 0.6
				
			Button:
				text: "Contact List"
				background_color: 0, 2, 16, 0.9		
				on_press: app.root.current = 'contact'


			
<DialScreen>:
    name: 'dial'
	
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			orientation: 'vertical'
			size_hint_y: 0.15
		
			BoxLayout:
				orientation: 'horizontal'
				Label:
					text: root.dialNumber
					font_size: 20
					size_hint_x: 0.8
				BoxLayout:
					size_hint_x: 0.2
					ImageButton:
						source: 'img/misc/backspace.png'
						on_press: root.bckSpace()
			
		GridLayout:
			cols: 3
			size_hint_y: 0.68
			
			CustButton1:
				text: "1"
				on_release: root.on_press_dial(self.text)
			CustButton1:
				text: "2"
				on_release: root.on_press_dial(self.text)
			CustButton1:
				text: "3"
				on_release: root.on_press_dial(self.text)
			CustButton1:
				text: "4"
				on_release: root.on_press_dial(self.text)
			CustButton1:
				text: "5"
				on_release: root.on_press_dial(self.text)
			CustButton1:
				text: "6"
				on_release: root.on_press_dial(self.text)
			CustButton1:
				text: "7"
				on_release: root.on_press_dial(self.text)
			CustButton1:
				text: "8"
				on_release: root.on_press_dial(self.text)
			CustButton1:
				text: "9"
				on_release: root.on_press_dial(self.text)
			CustButton1:
				text: "*"
				on_release: root.on_press_dial(self.text)
			CustButton1:
				text: "0"
				on_release: root.on_press_dial(self.text)
			CustButton1:
				text: "#"
				on_release: root.on_press_dial(self.text)
				
		BoxLayout:
			size_hint_y: 0.17
			Button:
				text: "Call"
				background_color: 16, 1, 1, 0.9
				on_press: root.call_num()
			Button:
				text: "Cancel"
				on_release: app.root.current = 'main'
				on_press: root.clear_screen()
					
					
<ContactScreen>:
	name: 'contact'
	
	BoxLayout:
		orientation: 'vertical'
		
		Label:
			text: 'Hello Gigi'
			
		Button:
			text: 'OK'
			on_release: app.root.current = 'main'
